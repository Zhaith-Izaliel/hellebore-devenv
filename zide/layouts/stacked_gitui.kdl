layout {
    tab {
        floating_panes {
            zide_rename
        }

        pane stacked=true {
            filepicker name="picker"
            editor expanded=true
            gitui
        }
        compact_bar size=1
    }

    // TEMPLATES
    pane_template name="gitui" start_suspended=true {
        command "gitui"
    }

    pane_template name="filepicker" {
        command "zide-pick"
    }

    pane_template name="editor" {
        command "$EDITOR"
    }

    pane_template name="compact_bar" {
        borderless true
        plugin location="compact-bar"
    }

    pane_template name="zide_rename" command="zide-rename" close_on_exit=true

    new_tab_template {
        pane
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }
}
